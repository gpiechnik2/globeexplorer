{
    "scenarios": [
        {
            "name": "security headers",
            "module_name": "securityheaders",
            "type": "risk",
            "command": "python3 securityheaders.py GLOBEEXPLORER_URL_WITH_HTTP",
            "assertions": [
                {
                    "type": "contain",
                    "value": "WARN"
                }
            ],
            "single": true
        },
        {
            "name": "SSLyze",
            "type": "vulnerability",
            "command": "sslyze GLOBEEXPLORER_URL_WITHOUT_HTTP",
            "assertions": [
                {
                    "type": "contain",
                    "value": "VULNERABLE -"
                }
            ],
            "single": true
        },
        {
            "name": "CRLF injection scanner",
            "type": "vulnerability",
            "module_name": "CRLF-Injection-Scanner",
            "command":  "python3 crlf.py scan -u \"GLOBEEXPLORER_URL_WITH_HTTP\"",
            "assertions": [
                {
                    "type": "contain",
                    "value": "CRLF injection detected at the following URLs:"
                }
            ],
            "url_type": "params",
            "single": true
        },
        {
            "name": "Damn small JS scanner",
            "type": "risk",
            "module_name": "DSJS",
            "command": "python3 dsjs.py -u GLOBEEXPLORER_URL_WITH_HTTP",
            "assertions": [
                {
                    "type": "not_contain",
                    "value": "no vulnerabilities found"
                }
            ],
            "single": true
        },
        {
            "name": "Corsy CORS scanner",
            "module_name": "Corsy",
            "type": "vulnerability",
            "command": "python3 corsy.py -u GLOBEEXPLORER_URL_WITH_HTTP",
            "assertions": [
                {
                    "type": "contain",
                    "value": "Severity"
                }
            ],
            "url_type": "params",
            "single": true
        },
        {
            "name": "secretfinder",
            "module_name": "secretfinder",
            "type": "vulnerability",
            "command": "python3 SecretFinder.py -i GLOBEEXPLORER_URL_WITH_HTTP -o cli -e",
            "assertions": [
                {
                    "type": "contain",
                    "value": "->"
                }
            ],
            "single": true
        },
        {
            "name": "nmap log4shell",
            "module_name": "nse-log4shell",
            "type": "vulnerability",
            "command": "nmap -sV -T4 -v --script=/ GLOBEEXPLORER_URL_WITHOUT_HTTP",
            "assertions": [
                {
                    "type": "contain",
                    "value": "VULNERABLE"
                }
            ],
            "single": true
        },
        {
            "name": "nmap vulners.nse",
            "type": "vulnerability",
            "command": "nmap GLOBEEXPLORER_URL_WITHOUT_HTTP --script=vulners.nse -sV",
            "assertions": [
                {
                    "type": "contain",
                    "value": "VULNERABLE"
                }
            ],
            "single": true
        }
    ]
